import React, {useEffect} from "react";

function Phylo() {

  useEffect(() => {

    const script = document.createElement('script');
    script.src = "https://cdn.rawgit.com/phylocanvas/phylocanvas-quickstart/v2.8.1/phylocanvas-quickstart.js";
    script.async = false;
    document.body.appendChild(script);

    script.addEventListener('load', function() {
      const Phylocanvas = window.Phylocanvas;
      var tree = Phylocanvas.createTree('phylocanvas');
      tree.load('(A:0.1,B:0.2,(C:0.3,D:0.4)E:0.5)F;');
    })

    return () => {
      document.body.removeChild(script);
    }
  }, [])


  return (
    <div className="Phylocanvas">
      <h1>Phylocanvas Quickstart</h1>
      <div id="phylocanvas"></div>
    </div>
  )
}

export default Phylo;
